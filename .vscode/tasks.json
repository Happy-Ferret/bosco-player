{
    "version": "0.1.0",
    "command": "/bin/sh",
    "cwd": "${workspaceRoot}",
    "isShellCommand": true,
    "args": ["-c"],
    "showOutput": "always",
    "echoCommand": true,
    "suppressTaskName": true,
    "tasks": [
        {
            "isBuildCommand": true,
            "taskName": "build",
            "args": ["tsc -p ./jsconfig.json && cat src/shebang.js bin/bosco-player > bin/tmp && mv bin/tmp bin/bosco-player && chmod +x bin/bosco-player"]
        }
    ]
}